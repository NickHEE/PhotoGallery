<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="297dp"
        android:layout_height="189dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="148dp"
        android:layout_marginRight="62dp"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/btnSnap"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="17dp"
        android:onClick="takePicture"
        android:text="snap" />

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="139dp"
        android:onClick="filterGallery"
        android:text="Filter" />

    <Button
        android:id="@+id/btn_r"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="309dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="137dp"
        android:onClick="takePicture"
        android:text="right" />

    <Button
        android:id="@+id/btn_l"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="138dp"
        android:onClick="takePicture"
        android:text="left" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_above="@+id/btnSnap"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="518dp"
        android:visibility="visible"
        android:text="2020-01-23" />

    <TextView
        android:id="@+id/textView_location"
        android:layout_width="153dp"
        android:layout_height="53dp"
        android:layout_above="@+id/btnSnap"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="513dp"
        android:visibility="visible"
        android:text="Joseph's Dungeon" />

    <EditText
        android:id="@+id/editText_caption"
        android:layout_width="351dp"
        android:layout_height="41dp"
        android:layout_above="@+id/btnSnap"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="166dp"
        android:visibility="visible"
        android:text="Caption" />



</RelativeLayout>